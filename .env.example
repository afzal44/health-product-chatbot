# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Stage Configuration
STAGE=dev

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://search-health-chatbot-dev-xxx.us-east-1.es.amazonaws.com
OPENSEARCH_INDEX_NAME=health-products
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your-password

# DynamoDB Configuration
CONVERSATIONS_TABLE=health-chatbot-conversations-dev

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_GUARDRAIL_ID=your-guardrail-id
BEDROCK_GUARDRAIL_VERSION=DRAFT

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Frontend Configuration
API_GATEWAY_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/dev
WEBSOCKET_URL=wss://your-websocket-id.execute-api.us-east-1.amazonaws.com/dev

# Security
CORS_ORIGINS=https://yourdomain.com,http://localhost:3000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO